{
  "name": "graph",
  "description": "graph structure and algorithms",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "start": "node src",
    "lint": "eslint ./src --fix",
    "prettier": "prettier ./src/**/*.* --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run prettier",
      "npm run lint",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.3",
    "eslint": "^6.3.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2"
  }
}
